<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quiztruefalse.Edit_Profil_Activity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="580dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@drawable/gradient3"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle"
                android:padding="10dp"
                android:src="@drawable/editprofil" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:rotation="45"
            android:src="@drawable/gradient3" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/imageView1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/prgresbar_gambar"
                        />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/image_profil"
                        android:src="@drawable/image_profil"


                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ganti Foto"
                        android:typeface="serif"
                        android:onClick="ganti_foto"
                        />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp">

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imgView_RepasswordIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/gradient3"
                android:padding="8dp"
                android:src="@drawable/email"
                android:tint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgView_RepasswordIcon"
                android:layout_alignParentTop="true"
                android:id="@+id/email_edit"
                android:layout_toRightOf="@+id/imgView_RepasswordIcon"
                android:background="@color/white"
                android:text="Email"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                android:onClick="ganti_email"
                android:typeface="serif"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imgView_repasswordIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/gradient3"
                android:padding="8dp"
                android:src="@drawable/pass"
                android:tint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgView_repasswordIcon"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imgView_repasswordIcon"
                android:background="@color/white"
                android:text="password"
                android:id="@+id/pass_editProf"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="15sp"
                android:onClick="ganti_password"
                android:typeface="serif"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout4"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/imgView_Icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/gradient3"
                android:padding="8dp"
                android:src="@drawable/repass"
                android:tint="@color/black" />

            <TextView
                android:id="@+id/nama_display_editprof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgView_Icon"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imgView_Icon"
                android:background="@color/white"
                android:text="Nama Belum di set"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="15sp"
                android:typeface="serif"
                android:onClick="ganti_displayname"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/chkBox1"
            android:layout_width="350px"
            android:layout_height="60px"
            android:layout_alignLeft="@+id/btn_signUp"
            android:layout_alignStart="@+id/btn_signUp"
            android:layout_below="@+id/relativeLayout5"
            android:layout_marginTop="18dp"
            android:background="@drawable/gradient3"
            android:typeface="serif"
            android:onClick="simpan"
            android:text="SIMPAN"
            android:textColor="@color/white"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn_signUp"
            android:layout_width="350px"
            android:layout_height="60px"
            android:layout_below="@+id/chkBox1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/gradient3"
            android:typeface="serif"
            android:onClick="batalkan"
            android:text="BATALKAN"
            android:textColor="@color/white"
            tools:ignore="OnClick" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>


